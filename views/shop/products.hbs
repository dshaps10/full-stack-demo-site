    <link rel="stylesheet" href="/css/shop.css" type="text/css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <title>{{pageTitle}}</title>
  </head>
	<body>
    <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="../">Â«</a>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="../shop">Home</a>
          <a class="nav-item nav-link active" href="">Products <span class="sr-only">(current)</span></a>
          <a class="nav-item nav-link" href="">My Account</a>
        </div>
      </div>
    </nav>
    <div class="jumbotron title" style="background-color: white;">
      <h1>Resin & Steel Bikes and Gear</h1>
    </div>
    <div class="jumbotron results-hero-image">
      <br /><h2 style="font-size: 5em; text-shadow: -1px 0 #cc7a00, 0 1px #cc7a00, 1px 0 #cc7a00, 0 -1px #cc7a00;
">Our Products</h2><br /><br />
    </div>
    <div class="container shop-body">
      {{#each productArray}}
        <div class="product">
          <a href="/shop/products/{{_id}}">
            <h2 style="color: black;">{{title}}</h2>
            <h3 style="color: black;">{{description}}</h3>
            <!-- <p>${{price}}</p> -->
          </a>
        </div>
      {{/each}}
